{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"ignorePatterns": [
		"**/.nx/**",
		"**/dist/**",
		"**/out/**",
		"**/gen/**",
		"**/dist-*/**",
		"**/reports/**",
		"**/target/**",
		"**/*.gen.*",
		"**/__generated__/**",
		"!**/__generated__/mocks/**",
		"**/*.lock"
	],
	"printWidth": 80,
	"useTabs": true,
	"experimentalSortImports": {
		"order": "asc",
		"groups": [
			["builtin"],
			["external"],
			["subpath", "internal"],
			["parent"],
			["sibling", "index"],
			["type"]
		]
	}
}
