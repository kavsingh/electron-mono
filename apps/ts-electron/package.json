{
	"name": "ts-electron",
	"version": "1.0.0",
	"description": "TS Electron setup",
	"type": "module",
	"main": "./out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"start": "electron-vite preview",
		"lint": "eslint .",
		"typecheck": "tsc",
		"codecheck": "bun run test && bun typecheck && bun lint",
		"test": "run-p test:node test:renderer",
		"test:node": "vitest run -c vitest.node.config.ts",
		"test:renderer": "vitest run -c vitest.renderer.config.ts",
		"testwatch": "run-p testwatch:**",
		"testwatch:node": "vitest -c vitest.node.config.ts",
		"testwatch:renderer": "vitest -c vitest.renderer.config.ts",
		"test:e2e": "cross-env E2E=true bun run build && playwright test",
		"build:win": "bun run build && electron-builder --win --config electron-builder.config.ts",
		"build:mac": "bun run build && electron-builder --mac --config electron-builder.config.ts",
		"build:linux": "bun run build && electron-builder --linux --config electron-builder.config.ts",
		"gen:electron-schema": "bun ./scripts/gen-electron-zod.ts"
	},
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"dependencies": {
		"@trpc/server": "10.45.1",
		"electron-trpc": "0.5.2",
		"eventemitter3": "5.0.1",
		"superjson": "2.2.1",
		"systeminformation": "5.22.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@electron/notarize": "2.3.0",
		"@playwright/test": "1.42.1",
		"@solidjs/router": "0.12.4",
		"@solidjs/testing-library": "0.8.6",
		"@tailwindcss/container-queries": "0.1.1",
		"@tanstack/solid-query": "5.24.2",
		"@testing-library/dom": "9.3.4",
		"@testing-library/jest-dom": "6.4.2",
		"@testing-library/user-event": "14.5.2",
		"@trpc/client": "10.45.1",
		"@vitest/coverage-v8": "1.3.1",
		"autoprefixer": "10.4.18",
		"electron": "29.1.0",
		"electron-builder": "24.12.0",
		"electron-vite": "2.0.0",
		"eslint-plugin-jest-dom": "5.1.0",
		"eslint-plugin-playwright": "1.5.1",
		"eslint-plugin-solid": "0.13.1",
		"eslint-plugin-tailwindcss": "3.14.3",
		"eslint-plugin-testing-library": "6.2.0",
		"eslint-plugin-vitest": "0.3.22",
		"jsdom": "24.0.0",
		"postcss": "8.4.35",
		"solid-js": "1.8.15",
		"tailwind-merge": "2.2.1",
		"tailwindcss": "3.4.1",
		"ts-to-zod": "3.7.3",
		"vite": "5.1.4",
		"vite-plugin-solid": "2.10.1",
		"vite-tsconfig-paths": "4.3.1",
		"vitest": "1.3.1"
	}
}
