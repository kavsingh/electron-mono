{
	"name": "ts-electron",
	"version": "1.0.0",
	"description": "TS Electron setup",
	"type": "module",
	"main": "./out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"start": "electron-vite preview",
		"lint": "eslint .",
		"typecheck": "tsc",
		"codecheck": "bun run test && bun typecheck && bun lint",
		"test": "run-p test:node test:renderer",
		"test:node": "vitest run -c vitest.node.config.ts",
		"test:renderer": "vitest run -c vitest.renderer.config.ts",
		"testwatch": "run-p testwatch:**",
		"testwatch:node": "vitest -c vitest.node.config.ts",
		"testwatch:renderer": "vitest -c vitest.renderer.config.ts",
		"test:e2e": "cross-env E2E=true bun run build && playwright test",
		"build:win": "bun run build && electron-builder --win --config electron-builder.config.ts",
		"build:mac": "bun run build && electron-builder --mac --config electron-builder.config.ts",
		"build:linux": "bun run build && electron-builder --linux --config electron-builder.config.ts",
		"gen:graphql": "graphql-codegen"
	},
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"dependencies": {
		"@apollo/server": "4.9.5",
		"eventemitter3": "5.0.1",
		"graphql": "16.8.1",
		"graphql-scalars": "1.22.4",
		"graphql-subscriptions": "2.0.0",
		"graphql-tag": "2.12.6",
		"graphql-transport-electron": "2.0.2",
		"systeminformation": "5.21.22",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@apollo/client": "3.8.8",
		"@electron/notarize": "2.2.0",
		"@graphql-codegen/cli": "5.0.0",
		"@graphql-codegen/near-operation-file-preset": "3.0.0",
		"@graphql-codegen/typed-document-node": "5.0.1",
		"@graphql-codegen/typescript": "4.0.1",
		"@graphql-codegen/typescript-graphql-files-modules": "3.0.0",
		"@graphql-codegen/typescript-operations": "4.0.1",
		"@graphql-codegen/typescript-resolvers": "4.0.1",
		"@graphql-tools/schema": "10.0.2",
		"@graphql-typed-document-node/core": "3.2.0",
		"@merged/solid-apollo": "1.7.1",
		"@playwright/test": "1.40.1",
		"@solidjs/router": "0.10.5",
		"@solidjs/testing-library": "0.8.5",
		"@tailwindcss/container-queries": "0.1.1",
		"@tanstack/solid-query": "5.14.2",
		"@testing-library/dom": "9.3.3",
		"@testing-library/jest-dom": "6.1.5",
		"@testing-library/user-event": "14.5.1",
		"@trpc/client": "10.44.1",
		"@vitest/coverage-v8": "1.1.0",
		"autoprefixer": "10.4.16",
		"electron": "28.1.0",
		"electron-builder": "24.9.1",
		"electron-vite": "2.0.0-beta.2",
		"eslint-plugin-jest-dom": "5.1.0",
		"eslint-plugin-playwright": "0.20.0",
		"eslint-plugin-solid": "0.13.0",
		"eslint-plugin-tailwindcss": "3.13.0",
		"eslint-plugin-testing-library": "6.2.0",
		"eslint-plugin-vitest": "0.3.19",
		"jsdom": "23.0.1",
		"postcss": "8.4.32",
		"solid-js": "1.8.7",
		"tailwind-merge": "2.2.0",
		"tailwindcss": "3.4.0",
		"ts-to-zod": "3.5.0",
		"vite": "5.0.10",
		"vite-plugin-graphql-codegen": "3.3.5",
		"vite-plugin-simple-gql": "0.5.0",
		"vite-plugin-solid": "2.8.0",
		"vite-tsconfig-paths": "4.2.2",
		"vitest": "1.1.0",
		"zen-observable-ts": "1.1.0"
	}
}
