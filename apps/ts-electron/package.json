{
	"name": "ts-electron",
	"version": "1.0.0",
	"description": "TS Electron setup",
	"type": "module",
	"main": "./out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"start": "electron-vite preview",
		"lint": "eslint .",
		"typecheck": "tsc",
		"codecheck": "pnpm run test && pnpm typecheck && pnpm lint",
		"test": "run-p test:node test:renderer",
		"test:node": "vitest run -c vitest.node.config.ts",
		"test:renderer": "vitest run -c vitest.renderer.config.ts",
		"testwatch": "run-p testwatch:**",
		"testwatch:node": "vitest -c vitest.node.config.ts",
		"testwatch:renderer": "vitest -c vitest.renderer.config.ts",
		"test:e2e": "cross-env E2E=true pnpm run build && playwright test",
		"build:win": "pnpm run build && electron-builder --win --config electron-builder.config.ts",
		"build:mac": "pnpm run build && electron-builder --mac --config electron-builder.config.ts",
		"build:linux": "pnpm run build && electron-builder --linux --config electron-builder.config.ts",
		"gen:electron-schema": "node --import=tsx ./scripts/gen-electron-zod.ts"
	},
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"dependencies": {
		"@trpc/server": "10.45.2",
		"electron-trpc": "0.6.1",
		"eventemitter3": "5.0.1",
		"superjson": "2.2.1",
		"systeminformation": "5.22.7",
		"zod": "3.23.6"
	},
	"devDependencies": {
		"@electron/notarize": "2.3.0",
		"@playwright/test": "1.43.1",
		"@solidjs/router": "0.13.3",
		"@solidjs/testing-library": "0.8.7",
		"@tailwindcss/container-queries": "0.1.1",
		"@tanstack/solid-query": "5.34.0",
		"@testing-library/dom": "10.1.0",
		"@testing-library/jest-dom": "6.4.5",
		"@testing-library/user-event": "14.5.2",
		"@trpc/client": "10.45.2",
		"@ts-electron/shared": "workspace:*",
		"@vitest/coverage-v8": "1.6.0",
		"autoprefixer": "10.4.19",
		"electron": "29.3.2",
		"electron-builder": "24.13.3",
		"electron-vite": "2.2.0",
		"eslint-plugin-jest-dom": "5.4.0",
		"eslint-plugin-playwright": "1.6.0",
		"eslint-plugin-solid": "0.14.0",
		"eslint-plugin-tailwindcss": "3.15.1",
		"eslint-plugin-testing-library": "6.2.2",
		"eslint-plugin-vitest": "0.5.4",
		"jsdom": "24.0.0",
		"postcss": "8.4.38",
		"solid-js": "1.8.17",
		"tailwind-merge": "2.3.0",
		"tailwindcss": "3.4.3",
		"ts-to-zod": "3.8.3",
		"vite": "5.2.11",
		"vite-plugin-solid": "2.10.2",
		"vite-tsconfig-paths": "4.3.2",
		"vitest": "1.6.0"
	}
}
