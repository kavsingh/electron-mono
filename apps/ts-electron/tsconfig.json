{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"noEmit": true,
		"paths": { "#*": ["./src/*"] },
		"sourceMap": true,
		// needed for "@merged/solid-apollo"
		"moduleResolution": "node"
	},
	"exclude": ["**/node_modules"],
	"include": [
		"./src",
		"./scripts",
		"./e2e",
		"./config",
		"./build",
		"./*.ts",
		"./*.cjs",
		"./*.*.cjs"
	]
}
