{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build:win": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:mac": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:linux": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"codecheck": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false,
			"persistent": true
		},
		"test:e2e": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"cache": false,
			"persistent": true
		}
	}
}
