{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build:win:x64": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:win:arm64": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:mac": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:linux": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false,
			"persistent": true
		},
		"test:ci": {
			"cache": false,
			"persistent": true
		},
		"test:e2e": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"cache": false,
			"persistent": true
		}
	}
}
