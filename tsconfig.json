{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"plugins": [{ "name": "typescript-styled-plugin", "validate": true }],
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "esnext"
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./e2e", "./config", "./*.ts"],
	"ts-node": {
		"swc": true,
		"transpileOnly": true,
		"compilerOptions": {
			"isolatedModules": false,
			"lib": ["esnext"],
			"module": "commonjs",
			"target": "es2022"
		}
	}
}
