{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "esnext",

		// latest ts-node release does not support extends array
		// manually add strictect config here
		// TODO: replace with "@tsconfig/strictest/tsconfig.json" in extends
		// array when supported by ts-node
		"strict": true,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		// leave to eslint: some extensions delete
		// unreachable code detected via ts too eagerly
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules"],
	"include": [
		"./src",
		"./tools",
		"./e2e",
		"./config",
		"./*.ts",
		"./*.cjs",
		"./*.*.cjs"
	],
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"isolatedModules": false,
			"lib": ["esnext"],
			"module": "commonjs",
			"target": "es2022"
		}
	}
}
