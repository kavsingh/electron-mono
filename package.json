{
	"name": "ts-electron",
	"version": "1.0.0",
	"description": "TS Electron setup",
	"main": "./out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"start": "electron-vite preview",
		"lint": "eslint .",
		"typecheck": "tsc",
		"codecheck": "yarn test && yarn typecheck && yarn lint",
		"test": "yarn run-p test:node test:renderer",
		"test:node": "vitest run -c vitest.node.config.ts",
		"test:renderer": "vitest run -c vitest.renderer.config.ts",
		"testwatch": "yarn run-p testwatch:**",
		"testwatch:node": "vitest -c vitest.node.config.ts",
		"testwatch:renderer": "vitest -c vitest.renderer.config.ts",
		"test:e2e": "cross-env E2E=true yarn build && playwright test",
		"build:win": "yarn run build && electron-builder --win --config electron-builder.config.ts",
		"build:mac": "yarn run build && electron-builder --mac --config electron-builder.config.ts",
		"build:linux": "yarn run build && electron-builder --linux --config electron-builder.config.ts",
		"gen:schema": "node --loader=tsx ./scripts/gen-electron-zod.mts"
	},
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"packageManager": "yarn@3.6.4",
	"dependencies": {
		"@trpc/server": "10.40.0",
		"electron-trpc": "0.5.2",
		"eventemitter3": "5.0.1",
		"superjson": "1.13.3",
		"systeminformation": "5.21.11",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@electron/notarize": "2.1.0",
		"@playwright/test": "1.39.0",
		"@solidjs/router": "0.8.3",
		"@tailwindcss/container-queries": "0.1.1",
		"@tanstack/solid-query": "5.0.0-rc.5",
		"@testing-library/dom": "9.3.3",
		"@testing-library/jest-dom": "6.1.4",
		"@testing-library/user-event": "14.5.1",
		"@trpc/client": "10.40.0",
		"@tsconfig/strictest": "2.0.2",
		"@types/eslint": "8.44.4",
		"@types/node": "20.8.6",
		"@typescript-eslint/eslint-plugin": "6.7.5",
		"@typescript-eslint/parser": "6.7.5",
		"@vitest/coverage-v8": "0.34.6",
		"autoprefixer": "10.4.16",
		"cross-env": "7.0.3",
		"electron": "27.0.0",
		"electron-builder": "24.6.4",
		"electron-vite": "1.0.28",
		"eslint": "8.51.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-deprecation": "2.0.0",
		"eslint-plugin-filenames": "1.3.2",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-jest-dom": "5.1.0",
		"eslint-plugin-playwright": "0.16.0",
		"eslint-plugin-prettier": "5.0.1",
		"eslint-plugin-solid": "0.13.0",
		"eslint-plugin-tailwindcss": "3.13.0",
		"eslint-plugin-testing-library": "6.1.0",
		"eslint-plugin-vitest": "0.3.2",
		"jsdom": "22.1.0",
		"npm-run-all": "4.1.5",
		"prettier": "3.0.3",
		"solid-js": "1.8.1",
		"solid-testing-library": "0.5.0",
		"tailwind-merge": "1.14.0",
		"tailwindcss": "3.3.3",
		"ts-to-zod": "3.1.3",
		"tsx": "3.13.0",
		"typescript": "5.2.2",
		"vite": "4.4.11",
		"vite-plugin-solid": "2.7.1",
		"vite-tsconfig-paths": "4.2.1",
		"vitest": "0.34.6"
	},
	"yarn": {
		"overrides": {
			"tsconfig-paths": ">=4.0.0"
		}
	}
}
