{
	"name": "ts-electron",
	"version": "1.0.0",
	"description": "TS Electron setup",
	"main": "./out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"start": "electron-vite preview",
		"lint": "eslint .",
		"typecheck": "tsc",
		"codecheck": "yarn test && yarn typecheck && yarn lint",
		"test": "yarn run-p test:node test:renderer",
		"test:node": "vitest run -c vitest.node.config.ts",
		"test:renderer": "vitest run -c vitest.renderer.config.ts",
		"testwatch": "yarn run-p testwatch:**",
		"testwatch:node": "vitest -c vitest.node.config.ts",
		"testwatch:renderer": "vitest -c vitest.renderer.config.ts",
		"test:e2e": "cross-env E2E=true yarn build && playwright test",
		"build:win": "yarn run build && electron-builder --win --config electron-builder.config.ts",
		"build:mac": "yarn run build && electron-builder --mac --config electron-builder.config.ts",
		"build:linux": "yarn run build && electron-builder --linux --config electron-builder.config.ts",
		"gen:schema": "node --import=tsx ./scripts/gen-electron-zod.mts"
	},
	"keywords": [],
	"author": "<author>",
	"license": "MIT",
	"dependencies": {
		"@trpc/server": "10.44.1",
		"electron-trpc": "0.5.2",
		"eventemitter3": "5.0.1",
		"superjson": "1.13.3",
		"systeminformation": "5.21.20",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@electron/notarize": "2.2.0",
		"@playwright/test": "1.40.1",
		"@solidjs/router": "0.10.1",
		"@solidjs/testing-library": "0.8.4",
		"@tailwindcss/container-queries": "0.1.1",
		"@tanstack/solid-query": "5.13.4",
		"@testing-library/dom": "9.3.3",
		"@testing-library/jest-dom": "6.1.5",
		"@testing-library/user-event": "14.5.1",
		"@trpc/client": "10.44.1",
		"@tsconfig/strictest": "2.0.2",
		"@types/eslint": "8.44.8",
		"@types/node": "20.10.4",
		"@typescript-eslint/eslint-plugin": "6.14.0",
		"@typescript-eslint/parser": "6.14.0",
		"@vitest/coverage-v8": "1.0.4",
		"autoprefixer": "10.4.16",
		"cross-env": "7.0.3",
		"electron": "28.0.0",
		"electron-builder": "24.9.1",
		"electron-vite": "1.0.29",
		"eslint": "8.55.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-deprecation": "2.0.0",
		"eslint-plugin-filenames": "1.3.2",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-jest-dom": "5.1.0",
		"eslint-plugin-playwright": "0.20.0",
		"eslint-plugin-prettier": "5.0.1",
		"eslint-plugin-solid": "0.13.0",
		"eslint-plugin-tailwindcss": "3.13.0",
		"eslint-plugin-testing-library": "6.2.0",
		"eslint-plugin-vitest": "0.3.16",
		"jsdom": "23.0.1",
		"npm-run-all": "4.1.5",
		"prettier": "3.1.1",
		"solid-js": "1.8.7",
		"tailwind-merge": "2.1.0",
		"tailwindcss": "3.3.6",
		"ts-to-zod": "3.5.0",
		"tsx": "4.6.2",
		"typescript": "5.3.3",
		"vite": "5.0.8",
		"vite-plugin-solid": "2.8.0",
		"vite-tsconfig-paths": "4.2.2",
		"vitest": "1.0.4"
	},
	"resolutions": {
		"tsconfig-paths": ">=4.0.0"
	}
}
